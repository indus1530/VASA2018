<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="value"
            type="int" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">


            <LinearLayout
                android:id="@+id/GrpName"
                style="@style/Q_Linerlayout_v"
                android:layout_marginBottom="60dp">


                <!--pregno EditText-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvpregno"
                    style="@style/Q_CardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/pregno"
                            style="@style/TextViewHead"
                            android:gravity="center"
                            android:text="Enter Detail of Pregnancy No:(1) "
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!--pregno EditText-->


                <!--W217 EditText-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvw217"
                    style="@style/Q_CardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_w217" />

                            <TextView
                                style="@style/TextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/w217" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/subTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/w217d" />

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/w217d"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:hint="##"
                                android:inputType="number"
                                android:maxLength="2"
                                app:maxValue="31"
                                app:minValue="1"
                                app:type="range" />

                            <TextView
                                style="@style/subTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/w217m" />

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/w217m"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:hint="##"
                                android:inputType="number"
                                android:maxLength="2"
                                app:maxValue="12"
                                app:minValue="1"
                                app:type="range" />

                            <TextView
                                style="@style/subTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/w217y" />

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/w217y"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:hint="####"
                                android:inputType="number"
                                android:maxLength="4"
                                app:maxValue="2022"
                                app:minValue="2016"
                                app:type="range" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!--W217 EditText-->


                <!--W218 Radio Button Starts -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvw218"
                    style="@style/Q_CardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_w218" />

                            <TextView
                                style="@style/TextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/w218" />

                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/w218"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/w218a"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/w218a" />

                            <RadioButton
                                android:id="@+id/w218b"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/w218b" />

                            <RadioButton
                                android:id="@+id/w218c"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/w218c" />

                            <RadioButton
                                android:id="@+id/w218d"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/w218d" />

                            <RadioButton
                                android:id="@+id/w218e"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/w218e" />

                            <RadioButton
                                android:id="@+id/w218f"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/w218f" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!--W218 Radio Button Ends-->


                <!--W219 Radio-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvw219"
                    style="@style/Q_CardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_w219" />

                            <TextView
                                style="@style/TextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/w219" />

                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/w219"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/w219a"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/w219a" />

                            <RadioButton
                                android:id="@+id/w219b"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/w219b" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!--W219 Radio-->


                <!--W221 EditText-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvw221"
                    style="@style/Q_CardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_w221" />

                            <TextView
                                style="@style/TextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/w221" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/subTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/w221y" />

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/w221y"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:hint="##"
                                android:inputType="number"
                                android:maxLength="2"
                                app:maxValue="12"
                                app:minValue="0"
                                app:type="range" />

                            <TextView
                                style="@style/subTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/w221m" />

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/w221m"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:hint="##"
                                android:inputType="number"
                                android:maxLength="2"
                                app:maxValue="11"
                                app:minValue="0"
                                app:type="range" />

                            <TextView
                                style="@style/subTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/w221d" />

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/w221d"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:hint="##"
                                android:inputType="number"
                                android:maxLength="2"
                                app:maxValue="29"
                                app:minValue="0"
                                app:type="range" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!--W221 EditText-->


                <!--w222 EditText-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvw222"
                    style="@style/Q_CardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/Q_w222" />

                            <TextView
                                style="@style/TextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/w222" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/subTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/w222y" />

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/w222y"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:hint="##"
                                android:inputType="number"
                                android:maxLength="2"
                                app:maxValue="12"
                                app:minValue="0"
                                app:type="range" />

                            <TextView
                                style="@style/subTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/w222m" />

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/w222m"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:hint="##"
                                android:inputType="number"
                                android:maxLength="2"
                                app:maxValue="11"
                                app:minValue="0"
                                app:type="range" />

                            <TextView
                                style="@style/subTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/w222d" />

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/w222d"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:hint="##"
                                android:inputType="number"
                                android:maxLength="2"
                                app:maxValue="29"
                                app:minValue="0"
                                app:type="range" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!--w222 EditText-->

            </LinearLayout>


        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/addPregnancy"
                style="@style/Button_collder"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_margin="10dp"
                android:background="@color/U_main"
                android:padding="10dp"
                android:text="Add Pregnancy"
                android:textSize="14sp" />

            <Button
                android:id="@+id/addChild"
                style="@style/Button_collder"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_margin="10dp"
                android:background="@color/blueprid"
                android:padding="10dp"
                android:text="Add Another child"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>


</layout>